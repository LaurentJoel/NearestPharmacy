import 'dart:convert';
import 'package:flutter/material.dart';
import 'package:http/http.dart' as http;
import 'package:geolocator/geolocator.dart';
import 'package:url_launcher/url_launcher.dart';

void main() {
  runApp(const NearestPharmacyApp());
}

class NearestPharmacyApp extends StatelessWidget {
  const NearestPharmacyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Nearest Pharmacy',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(
        colorScheme: ColorScheme.fromSeed(
          seedColor: const Color(0xFF00A86B),
          brightness: Brightness.light,
        ),
        useMaterial3: true,
      ),
      darkTheme: ThemeData(
        colorScheme: ColorScheme.fromSeed(
          seedColor: const Color(0xFF00A86B),
          brightness: Brightness.dark,
        ),
        useMaterial3: true,
      ),
      home: const HomePage(),
    );
  }
}

class HomePage extends StatefulWidget {
  const HomePage({super.key});

  @override
  State<HomePage> createState() => _HomePageState();
}

class _HomePageState extends State<HomePage> {
  // API Configuration
  // For Android emulator: use 10.0.2.2 instead of localhost
  // For physical device: use your computer's IP address
  static const String baseUrl = 'http://10.0.2.2:5000';
  
  bool _isLoading = false;
  String? _error;
  List<Pharmacy> _pharmacies = [];
  Position? _currentPosition;
  int _searchRadius = 5000; // meters

  @override
  void initState() {
    super.initState();
    _getCurrentLocation();
  }

  Future<void> _getCurrentLocation() async {
    setState(() {
      _isLoading = true;
      _error = null;
    });

    try {
      // Check if location services are enabled
      bool serviceEnabled = await Geolocator.isLocationServiceEnabled();
      if (!serviceEnabled) {
        throw Exception('Les services de localisation sont désactivés');
      }

      // Check permissions
      LocationPermission permission = await Geolocator.checkPermission();
      if (permission == LocationPermission.denied) {
        permission = await Geolocator.requestPermission();
        if (permission == LocationPermission.denied) {
          throw Exception('Permission de localisation refusée');
        }
      }

      if (permission == LocationPermission.deniedForever) {
        throw Exception('Permission de localisation refusée définitivement');
      }

      // Get current position
      Position position = await Geolocator.getCurrentPosition(
        desiredAccuracy: LocationAccuracy.high,
      );

      setState(() {
        _currentPosition = position;
        _isLoading = false;
      });

      // Auto-search when location is available
      await _searchNearbyPharmacies();
    } catch (e) {
      setState(() {
        _error = e.toString();
        _isLoading = false;
      });
    }
  }

  Future<void> _searchNearbyPharmacies() async {
    if (_currentPosition == null) {
      setState(() {
        _error = 'Position non disponible';
      });
      return;
    }

    setState(() {
      _isLoading = true;
      _error = null;
    });

    try {
      final Uri uri = Uri.parse(
        '$baseUrl/api/pharmacies/nearby'
        '?lat=${_currentPosition!.latitude}'
        '&lon=${_currentPosition!.longitude}'
        '&distance_m=$_searchRadius',
      );

      final response = await http.get(uri).timeout(
        const Duration(seconds: 10),
      );

      if (response.statusCode == 200) {
        final data = json.decode(response.body);
        
        if (data['success'] == true) {
          final List<dynamic> pharmaciesJson = data['pharmacies'] ?? [];
          setState(() {
            _pharmacies = pharmaciesJson
                .map((json) => Pharmacy.fromJson(json))
                .toList();
            _isLoading = false;
          });
        } else {
          throw Exception(data['error'] ?? 'Erreur inconnue');
        }
      } else {
        throw Exception('Erreur serveur: ${response.statusCode}');
      }
    } catch (e) {
      setState(() {
        _error = 'Erreur: ${e.toString()}';
        _isLoading = false;
      });
    }
  }

  void _callPharmacy(String phone) async {
    final Uri phoneUri = Uri(scheme: 'tel', path: phone);
    if (await canLaunchUrl(phoneUri)) {
      await launchUrl(phoneUri);
    }
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Pharmacies de Garde'),
        backgroundColor: Theme.of(context).colorScheme.primaryContainer,
        actions: [
          IconButton(
            icon: const Icon(Icons.refresh),
            onPressed: _getCurrentLocation,
            tooltip: 'Actualiser',
          ),
        ],
      ),
      body: Column(
        children: [
          // Location & Search Info Card
          Card(
            margin: const EdgeInsets.all(12),
            child: Padding(
              padding: const EdgeInsets.all(16),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  if (_currentPosition != null) ...[
                    Row(
                      children: [
                        Icon(
                          Icons.location_on,
                          color: Theme.of(context).colorScheme.primary,
                        ),
                        const SizedBox(width: 8),
                        Expanded(
                          child: Text(
                            'Position: ${_currentPosition!.latitude.toStringAsFixed(4)}, '
                            '${_currentPosition!.longitude.toStringAsFixed(4)}',
                            style: Theme.of(context).textTheme.bodyMedium,
                          ),
                        ),
                      ],
                    ),
                    const SizedBox(height: 12),
                  ],
                  // Radius Slider
                  Row(
                    children: [
                      const Icon(Icons.radar),
                      const SizedBox(width: 8),
                      Expanded(
                        child: Slider(
                          value: _searchRadius.toDouble(),
                          min: 1000,
                          max: 20000,
                          divisions: 19,
                          label: '${(_searchRadius / 1000).toStringAsFixed(0)} km',
                          onChanged: (value) {
                            setState(() {
                              _searchRadius = value.toInt();
                            });
                          },
                        ),
                      ),
                      Text('${(_searchRadius / 1000).toStringAsFixed(0)} km'),
                    ],
                  ),
                  // Search Button
                  SizedBox(
                    width: double.infinity,
                    child: ElevatedButton.icon(
                      onPressed: _isLoading ? null : _searchNearbyPharmacies,
                      icon: const Icon(Icons.search),
                      label: const Text('Rechercher'),
                    ),
                  ),
                ],
              ),
            ),
          ),
          
          // Error Display
          if (_error != null)
            Container(
              width: double.infinity,
              padding: const EdgeInsets.all(12),
              margin: const EdgeInsets.symmetric(horizontal: 12),
              decoration: BoxDecoration(
                color: Theme.of(context).colorScheme.errorContainer,
                borderRadius: BorderRadius.circular(8),
              ),
              child: Text(
                _error!,
                style: TextStyle(
                  color: Theme.of(context).colorScheme.onErrorContainer,
                ),
              ),
            ),
          
          // Loading Indicator
          if (_isLoading)
            const Padding(
              padding: EdgeInsets.all(20),
              child: CircularProgressIndicator(),
            ),
          
          // Results List
          if (!_isLoading && _pharmacies.isNotEmpty)
            Padding(
              padding: const EdgeInsets.symmetric(horizontal: 12),
              child: Text(
                '${_pharmacies.length} pharmacie(s) de garde trouvée(s)',
                style: Theme.of(context).textTheme.titleMedium,
              ),
            ),
          
          Expanded(
            child: ListView.builder(
              padding: const EdgeInsets.all(12),
              itemCount: _pharmacies.length,
              itemBuilder: (context, index) {
                final pharmacy = _pharmacies[index];
                return PharmacyCard(
                  pharmacy: pharmacy,
                  onCall: () => _callPharmacy(pharmacy.telephone),
                );
              },
            ),
          ),
        ],
      ),
    );
  }
}

// Pharmacy Model
class Pharmacy {
  final int id;
  final String nom;
  final String adresse;
  final String telephone;
  final String ville;
  final double latitude;
  final double longitude;
  final double distanceM;

  Pharmacy({
    required this.id,
    required this.nom,
    required this.adresse,
    required this.telephone,
    required this.ville,
    required this.latitude,
    required this.longitude,
    required this.distanceM,
  });

  factory Pharmacy.fromJson(Map<String, dynamic> json) {
    return Pharmacy(
      id: json['id'] ?? 0,
      nom: json['nom'] ?? '',
      adresse: json['adresse'] ?? '',
      telephone: json['telephone'] ?? '',
      ville: json['ville'] ?? '',
      latitude: (json['latitude'] ?? 0).toDouble(),
      longitude: (json['longitude'] ?? 0).toDouble(),
      distanceM: (json['distance_m'] ?? 0).toDouble(),
    );
  }

  String get formattedDistance {
    if (distanceM >= 1000) {
      return '${(distanceM / 1000).toStringAsFixed(1)} km';
    }
    return '${distanceM.toStringAsFixed(0)} m';
  }
}

// Pharmacy Card Widget
